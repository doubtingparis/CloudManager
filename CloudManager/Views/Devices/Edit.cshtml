@model CloudManager.Models.Device

@{
    ViewData["Title"] = "Edit";
}

<h2>EDIT</h2>
<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeviceID" class="control-label"></label><br />
                <input asp-for="DeviceID" type="number" class="form-control" readonly="readonly" />
                <span asp-validation-for="DeviceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* Dropdown with datafeed from DB *@
                <label asp-for="CustomerID" class="control-label"></label>
                <select asp-for="CustomerID" class="form-control" asp-items="@(new SelectList(Model.CustomerSelection, "CustomerID", "Name"))"></select>
                <span asp-validation-for="CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthKey" class="control-label"></label><br />
                <input asp-for="AuthKey" type="text" class="form-control" readonly="readonly" />
                <span asp-validation-for="AuthKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label><br />
                <input asp-for="Date" type="datetime" class="form-control" readonly="readonly" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            @*<input type="hidden" asp-for="DeviceID" />*@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
