@model CloudManager.ViewModels.Device_ViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @* Dropdown with datafeed from DB *@
                <label asp-for="Device.CustomerID" class="control-label"></label>
                <select asp-for="Device.CustomerID" class="form-control" asp-items="@(new SelectList(Model.CustomerSelection, "CustomerID", "Name"))"></select>
                <span asp-validation-for="Device.CustomerID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Device.DeviceID" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
