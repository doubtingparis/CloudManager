@model CloudManager.Models.Device

@{
    ViewData["Title"] = "Details";
}

<h2>DETAILS</h2>
<h4>Device</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="DeviceID" class="control-label"></label><br />
            <input asp-for="DeviceID" type="number" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Customer.Name" class="control-label"></label><br />
            <input asp-for="Customer.Name" type="text" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label><br />
            <input asp-for="Date" type="datetime" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="AuthKey" class="control-label"></label><br />
            <input asp-for="AuthKey" type="text" class="form-control" onfocus="this.select();" onmouseup="return false;" />
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DeviceID">Edit item</a> | 
    <a asp-action="Index">Back to List</a>
</div>
