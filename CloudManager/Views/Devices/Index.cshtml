@model IEnumerable<CloudManager.Models.Device>

@{
    ViewData["Title"] = "Manage device";
}

<h2>MANAGE</h2>
<h4>Device</h4>
<hr />

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeviceID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @* empty header to reserve space *@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeviceID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DeviceID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.DeviceID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.DeviceID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <label class="control-label">No elements to show.</label><br />
}

<a asp-action="Create" class="btn btn-default" role="button" aria-pressed="true">Create new</a>
